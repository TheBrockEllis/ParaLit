%h1 Dashboard index

.panel.panel-default
  .panel-heading
    Your Books
    = link_to "New Book", new_book_path, { :class => "pull-right" }

  %table.table
    %tr
      %th Book Title
      %th Author
      %th Created
      %th
    - @books.each do |b|
      %tr
        %td
          = b.title
        %td
          = b.author
        %td
          = b.created_at.to_time.strftime('%B %e at %l:%M %p')
        %td
          = link_to 'Delete', destroy_book_path(b), { :class => 'btn btn-danger pull-right', :method => :delete }
          = link_to 'View', show_book_path(b), { :class => 'btn btn-primary pull-right' }
          = link_to 'Edit', edit_book_path(b), { :class => 'btn pull-right' }
