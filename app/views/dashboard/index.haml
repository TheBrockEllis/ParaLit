%h1 Your Digital Library

.panel.panel-default
  .panel-heading
    Books
    = link_to 'New Book', new_book_path, { :class => 'pull-right' }

  %table.table
    %tr
      %th Book Title
      %th Author
      %th Created
      %th
    - @books.each do |b|
      %tr
        %td
          = link_to b.title, book_path(b)
        %td
          = b.author
        %td
          = b.created_at.to_time.strftime('%B %e at %l:%M %p')
        %td
          = link_to 'Delete', book_path(b), { :class => 'btn pull-right', :method => :delete, :data => {confirm: 'Are you sure you want to delete this books?', commit: 'Delete Book'} }
          = link_to 'Edit', edit_book_path(b), { :class => 'btn btn-primary pull-right' }
