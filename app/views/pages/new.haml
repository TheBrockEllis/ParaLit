%h1 Add New Page

.container
  .row-fluid
    = simple_form_for @page, url: book_pages_path(@book), html: {multipart: true} do |f|
      .left-side.col-sm-6
        %img{src: 'http://placehold.it/300x300'}
        = f.input :image_location, label: 'Image', as: :file

      .right-side.col-sm-6
        = f.input :sequence, label: 'Page sequence', as: :integer
        = f.input :content, label: 'Content'
        = f.button :submit

        %a{ href: edit_book_path(@book), class: 'pull-right' }
          Cancel